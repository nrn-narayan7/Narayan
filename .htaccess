RewriteEngine On

# Allow access to URLs without .html extension
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^.]+)$ $1.html [L]

# Redirect .html URLs to extensionless versions (SEO/canonical)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^([^.]+)\.html$ /$1 [R=301,L]
